<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="/assets/application.css">
  </head>

  <body>
                <% if notice %>
                <div><h4><%= notice %></h4></div>
	            <% end %>
	            <% if alert %>
                <div><p><%= alert %></p></div>
	            <% end %>
          <div class="grid-page">
            
            <div class="header">
                <% if current_user%>
                  <div class = "home"><%= link_to "Home", user_path(current_user)%></div>
                  <% if current_user.username != "guest" %>
                    <div class = "edit"><%= link_to "Edit Account", edit_user_path(current_user)%></div>
                  <% end %>
                  <div class = "logout"><%=link_to "Logout", logout_path, method: :delete%></div>
                <% end %>

            </div>
            <div class="content">

              <%= yield %>

            </div>
            <div class="footer">FOOTER</div>
        </div>
  </body>
</html>
