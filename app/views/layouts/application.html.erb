<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="/assets/application.css">
  </head>

  <body>
                <% if notice %>
                <div><h4><%= notice %></h4></div>
	            <% end %>
	            <% if alert %>
                <div><h4><%= alert %></h4></div>
	            <% end %>
          <div class="grid-page">
            
            <div class="header">
                <% if current_user%>
                  <div class = "home"><%= link_to "Home", user_path(current_user), class: "nav-button"%></div>
                  <% if current_user.username != "guest" %>
                    <div class = "edit"><%= link_to "Edit Account", edit_user_path(current_user), class: "nav-button"%></div>
                  <% end %>
                  <div class = "logout"><%=link_to "Logout", logout_path, class: "nav-button", method: :delete%></div>
                <% else %>
                  <div class = "home"><%= link_to "Home", "/", class: "nav-button"%></div>
                <% end %>
            </div>
            <div class="content">

              <%= yield %>

            </div>
            <div class="footer">
              <div class="about"><%= link_to "About", '/about', class: "nav-button"%></div>
              <div class="how-to-play"><%= link_to "How to Play", '/how-to-play', class: "nav-button"%></div>
            </div>
            
            </div>
        </div>
  </body>
</html>
