<!DOCTYPE html>
<html>
  <head>
    <title>FlatironHorror</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link rel="stylesheet" href="/assets/application.css">
  </head>

  <body>
  	<% if notice %>
      	    <%= notice %>
	<% end %>
	
	<% if alert %>
      	    <%= alert %>
	<% end %>
          <div class="grid-page">
            <div class="header">
                <div>HOME</div>
                <div><%=link_to "LOGIN", "/login"%></div>
            </div>
            <div class="content">

              <%= yield %>

            </div>
            <div class="footer">FOOTER</div>
        </div>
  </body>
</html>
